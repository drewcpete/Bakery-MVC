@using Bakery.Models;

<h3>Here are all the orders for this vendor!</h3>


<ul>
    @foreach (Order order in @Model["orders"])
    {
        <h3>@order.Title</h3>
        <ul>
            <li>@order.OrderDescription</li>
            <li>@order.Date</li>
            <li>@order.Price</li>
        </ul>

    }    
</ul>

<p><a href='/vendors/@Model["vendor"].VendorId/orders/new'>Add a new order!</a></p>
<br>
<p><a href="/vendors">Return to Vendors</a></p>
